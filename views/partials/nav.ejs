<!-- JavaScript to toggle dropdown menu -->
<script>
    const hamburger = document.getElementById('hamburger-btn');
    const navLinks = document.getElementById('nav-links');

    hamburger.addEventListener('click', () => {
        navLinks.classList.toggle('active');
    });
</script>
<script>
    const userMenuBtn = document.getElementById('user-menu-btn');
    const userDropdown = document.getElementById('user-dropdown');

    userMenuBtn?.addEventListener('click', () => {
        userDropdown.classList.toggle('active');
    });

    // Optional: Click outside to close dropdown
    document.addEventListener('click', function (e) {
        if (!userMenuBtn.contains(e.target) && !userDropdown.contains(e.target)) {
            userDropdown.classList.remove('active');
        }
    });
</script>

<script>
  function hideDropdown() {
    setTimeout(() => {
      document.getElementById('location-dropdown').style.display = 'none';
    }, 200); // slight delay for click to register
  }

  function selectLocation(value) {
    document.getElementById('search-bar').value = value;
    document.getElementById('location-dropdown').style.display = 'none';
  }

  function filterDropdown(query) {
    const dropdown = document.getElementById('location-dropdown');
    const items = document.querySelectorAll('#location-dropdown .dropdown-item');
    query = query.toLowerCase();

    if (query.length < 1) {
      dropdown.style.display = 'none';
      return;
    }

    let anyVisible = false;
    items.forEach(item => {
      if (item.textContent.toLowerCase().includes(query)) {
        item.style.display = 'block';
        anyVisible = true;
      } else {
        item.style.display = 'none';
      }
    });

    dropdown.style.display = anyVisible ? 'block' : 'none';
  }

  document.addEventListener('click', (e) => {
    if (!e.target.closest('.search-bar-form')) {
      hideDropdown();
    }
  });
</script>
