        color: #ff385c;
    }

    .nav-right {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .user-menu {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 6px 10px;
        border: 1px solid #ccc;
        border-radius: 20px;
        cursor: pointer;
        transition: box-shadow 0.3s ease;
    }

    .user-menu:hover {
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .hamburger {
        display: none;
        cursor: pointer;
    }

    .hamburger img {
        width: 26px;
        height: 26px;
    }
    .homeImg{
        width: 160px;
        height: 45px; 
        display: block; 
        margin-right: 
        8px; 
        border-radius: 10px; 
        background-color: #22222200;
    }
    .homeImg:hover {
        transform: scale(1.05);
        transition: transform 0.3s ease;
    }




    @media (max-width: 768px) {
    .nav-links {
        display: none;
        position: absolute;
        top: 100%;
        right: 1rem;
        width: 220px; /* increased width for form space */
        flex-direction: column;
        backdrop-filter: blur(6px);
        background: rgba(255, 255, 255, 0.672);
        padding: 0.6rem 0.8rem;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.1);
        border-radius: 12px;
        border: 1px solid rgba(0, 0, 0, 0.05);
        animation: fadeDown 0.25s ease-out;
        z-index: 999;
        gap: 0.5rem;
    }

    .nav-links a {
        padding: 8px 10px;
        font-size: 0.95rem;
        color: #333;
        border-radius: 10px;
        transition: all 0.2s ease;
    }

    .nav-links a:hover {
        background-color: #fce8ec;
        color: #ff385c;
    }

    .nav-links.active {
        display: flex;
    }

    .hamburger {
        display: block;
    }

    @keyframes fadeDown {
        0% {
            opacity: 0;
            transform: translateY(-8px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    

    
}
.user-menu-wrapper {
    position: relative;
}

.user-menu {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    padding: 6px 10px;
    border: 1px solid #ccc;
    border-radius: 20px;
    cursor: pointer;
    transition: box-shadow 0.3s ease;
    position: relative;
}

.user-menu img {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    object-fit: cover;
}

.user-dropdown {
    display: none;
    position: absolute;
    top: 110%;
    right: 0;
    background: #fff;
    box-shadow: 0 6px 16px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    overflow: hidden;
    min-width: 160px;
    z-index: 1000;
    animation: fadeDown 0.25s ease-out;
}

.user-dropdown a {
    display: block;
    padding: 10px 14px;
    text-decoration: none;
    color: #333;
    font-size: 0.95rem;
    transition: background 0.2s ease, color 0.2s ease;
}

.user-dropdown a:hover {
    background: #fce8ec;
    color: #ff385c;
}
.user-dropdown.active {
    display: block;
}
.user-menu span {
    max-width: 100px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
</style>

